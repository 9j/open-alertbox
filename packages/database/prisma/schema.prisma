datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

enum AlertType {
  DONATION
  SUBSCRIPTION
  FOLLOW
}

model AlertEvent {
  id        String    @id @default(cuid())
  type      AlertType
  name      String
  message   String?
  amount    Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
